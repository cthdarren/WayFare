<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/outer_padding"
    tools:context=".Fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify your email address"
            android:textSize="@dimen/font_2xl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:textSize="@dimen/font_sm"
            android:text="It is recommended that you verify your account to increase your profile's credibiltiy among users."/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="40dp"
    android:text="After clicking the button below, an email will be sent to your email address with a link. Please click on that link to verify your email address"/>
            <Button
                android:id="@+id/verifyemailbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click here to verify your email"/>
    </LinearLayout>

</FrameLayout>