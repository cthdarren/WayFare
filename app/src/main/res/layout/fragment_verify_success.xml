<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/outer_padding"
    tools:context=".Fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your email"
            android:textSize="@dimen/font_2xl"/>

<TextView
    android:layout_width="match_parent"
    android:id="@+id/successemailtext"
    android:layout_height="wrap_content"
    android:paddingVertical="40dp"
    android:textSize="@dimen/font_sm"
    android:text="An email has been sent to your email address at"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:text="Didn't get it? Click here again to send another one"/>
            <Button
                android:id="@+id/sendemailbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send another link"/>
    </LinearLayout>

</FrameLayout>