<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmarks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Fragment.UpcomingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/outer_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Tours"
            android:textSize="@dimen/font_xl"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/font_2xl"
            android:layout_height="@dimen/font_2xl"
            android:src="@drawable/outline_bookmark_border_24" />

    </LinearLayout>



    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        tools:itemCount="3"
        tools:listitem="@layout/upcoming_booking_item"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/outer_padding">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:textSize="@dimen/font_md"
            android:text="Your past bookings"/>

    </LinearLayout>


</LinearLayout>