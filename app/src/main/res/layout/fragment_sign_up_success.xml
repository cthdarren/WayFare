<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tourEndTime"
    android:layout_width="match_parent"
    android:background="@color/md_theme_background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/outer_padding"
    tools:context=".Fragment.SignInFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:text="Welcome to WayFare"
        android:textSize="@dimen/font_2xl"
         />

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/font_sm"
        android:layout_height="wrap_content"
        android:text="Verify your email address to make your account more credible to other users."
        />



        <Button
            android:layout_width="250dp"
            android:id="@+id/verify_account"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Verify your email address"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="1dp"
            android:background="@color/material_dynamic_neutral80"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="@dimen/font_sm"
            android:text="Alternatively, click here to sign in without verifying your email."
            />
        <Button
            android:layout_width="250dp"
            android:id="@+id/sign_in"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Sign in without verifying"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>