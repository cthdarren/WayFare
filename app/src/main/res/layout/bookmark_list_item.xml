<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/upcomingListingWrapper"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="15dp"
    android:clickable="true"
    app:rippleColor="@color/transparent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/transparent"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/bookmarkBtn"
        android:button="@drawable/icon_selection_bookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/white" />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/listingThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/md_theme_onSurface" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

<TextView
    android:id="@+id/listingRating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/font_xs"
    android:text="5.0* (435)"/>
                <TextView
                    android:id="@+id/listingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Test bookasdfkjklasdjflksdajfkljsadklfjklasd;fkl;asdjklf;jasdl;kfjl;askjflkjas;klfjlaksdfkling 101"
                    android:textSize="@dimen/font_sm"
                    android:textStyle="bold" />



            <TextView
                android:id="@+id/listingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Singapore"
                android:textSize="@dimen/font_xs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wayfarerUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hosted by me"
                    android:textSize="@dimen/font_xs" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>